// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "collaboration_panel": {
    "dock": "left",
    "button": false
  },
  "notification_panel": {
    "dock": "right",
    "button": false
  },
  "agent": {
    "use_modifier_to_send": false,
    "default_view": "text_thread", // or 'thread'
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "default_profile": "ask",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    }
  },
  "ui_font_size": 22,
  "buffer_font_size": 22.0,
  "buffer_font_family": "Hack Nerd Font Propo",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Catppuccin Macchiato"
  },
  "base_keymap": "None",
  "auto_install_extensions": {
    //"html": true,
    //"dockerfile": true,
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "*.meta",
    "**/__pycache__",
    "**/.venv",
    "**/node_modules"
  ],
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "left_neighbour",
    "show_close_button": "hover",
    "show_diagnostics": "off"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": true
  },
  "hard_tabs": false,
  "terminal": {
    "blinking": "terminal_controlled",
    "toolbar": {
      "breadcrumbs": true
    }
  },
  "outline_panel": {
    "button": false
  },
  "languages": {
    "Python": {
      "tab_size": 4,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": {
        "language_server": {
          "name": "ruff"
        }
      },
      "show_completions_on_input": true
    }
  },
  "lsp": {
    "basedpyright": {
      "settings": {
        "python": {
          // 1. Tell it where to find your venv
          // (Adjust ".venv" if your folder is named "env" or "venv")
          "venvPath": ".",
          "venv": ".venv"
        },
        "basedpyright": {
          "analysis": {
            // 2. Stop it from complaining about things it "doesn't see"
            // "basic" is standard, "off" disables type checking entirely (like VS Code default)
            "typeCheckingMode": "basic",

            // 3. If it still can't find your local folders/modules, add them here
            "extraPaths": ["./src", "./app"],

            // 4. Force it to look at all files to resolve imports correctly
            "diagnosticMode": "workspace"
          }
        }
      }
    }
  }
}
