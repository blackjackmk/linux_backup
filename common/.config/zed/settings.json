// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "collaboration_panel": {
    "dock": "left",
    "button": false
  },
  "notification_panel": {
    "dock": "right",
    "button": false
  },
  "agent": {
    "use_modifier_to_send": false,
    "default_view": "thread", // 'text_thread' or 'thread'
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    }
  },
  "ui_font_size": 22,
  "buffer_font_size": 22.0,
  "buffer_font_family": "Hack Nerd Font Propo",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Catppuccin Macchiato"
  },
  "base_keymap": "None",
  "auto_install_extensions": {
    //"html": true,
    //"dockerfile": true,
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "*.meta",
    "**/__pycache__",
    "**/node_modules",
    "**/.ropeproject",
    "**/.ruff_cache",
    "**/.zed"
  ],
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "left_neighbour",
    "show_close_button": "hover",
    "show_diagnostics": "off"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": true
  },
  "hard_tabs": false,
  "terminal": {
    "blinking": "terminal_controlled",
    "toolbar": {
      "breadcrumbs": true
    }
  },
  "outline_panel": {
    "button": false
  },
  "languages": {
    "Python": {
      "tab_size": 4,
      "hard_tabs": false,
      "format_on_save": "on",
      "show_completions_on_input": true,
      "language_servers": ["ty", "!basedpyright", "!pyright", "!pylsp"],
      "linting": {
        "enabled": true,
        "ruff": {
          "enabled": true
        }
      },
      "formatting": {
        "provider": "ruff"
      }
    }
  },
  "lsp": {
    "ty": {
      "binary": {
        "path": "/home/user/.local/bin/ty",
        "arguments": ["server"]
      }
    }
  }
}
